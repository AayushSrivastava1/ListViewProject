<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_adapter_layout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/id_adapter_picture"
        android:layout_width="37dp"
        android:layout_height="139dp"
        android:layout_weight="1"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="72dp"
        android:layout_height="138dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_adapter_text"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/id_adapter_textdesc"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="57dp"
        android:layout_height="139dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/id_button_button"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/id_youtubeopener"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:text="Open Youtube Tutorial?" />

    </LinearLayout>

</LinearLayout>